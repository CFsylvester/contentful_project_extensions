{
  "name": "svg-picker",
  "src": "http://localhost:3000",
  "locations": [
    {
      "location": "entry-field",
      "fieldTypes": ["Symbol"]
    }
  ],
  "scopes": [
    "read:entries",
    "read:assets",
    "read:tags",
    "manage:app_parameters"
  ],
  "parameters": {
    "instance": [
      {
        "id": "enableTextSearch",
        "type": "Boolean",
        "name": "Enable Text Search",
        "description": "Toggle to enable or disable text search functionality.",
        "required": false
      },  
      {
        "id": "svgGroup",
        "type": "Symbol",
        "name": "Svg Group",
        "description": "Select a tag group for SVGs.",
        "required": true,
        "controls": {
          "widget": "dropdown"
        }
      }
    ]
  }
}